---
const { framework } = Astro.props;
---

<a href={`/frameworks/${framework.slug}`} class="group">
  <div class="flex flex-col items-center p-3 rounded-md border border-gray-200 bg-white hover:border-indigo-200 hover:shadow-sm transition-all">
    {framework.icon_url ? (
      <img 
        src={framework.icon_url} 
        alt={`${framework.name} logo`} 
        class="w-16 h-16 object-contain mb-2"
      />
    ) : (
      <div class="w-16 h-16 bg-gray-100 rounded-md flex items-center justify-center mb-2">
        <span class="text-gray-400 text-xs">{framework.name.substring(0, 2)}</span>
      </div>
    )}
    <h3 class="text-sm font-medium text-center text-gray-900 group-hover:text-indigo-600">
      {framework.name}
    </h3>
  </div>
</a>
