---
const { library } = Astro.props;

// Format numbers with commas
const formatNumber = (num) => {
  return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
};
---

<div class="bg-white border border-gray-200 rounded-md overflow-hidden hover:border-indigo-200 hover:shadow-sm transition-all">
  <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
    <div class="flex items-center space-x-3">
      {library.icon_url && (
        <img 
          src={library.icon_url} 
          alt={`${library.name} logo`} 
          class="w-6 h-6 object-contain"
        />
      )}
      <a href={`/libraries/${library.slug}`} class="text-base font-medium text-gray-900 hover:text-indigo-600">
        {library.name}
      </a>
    </div>
    <a 
      href={`/frameworks/${library.framework.slug}`}
      class="text-xs text-gray-500 hover:text-indigo-600"
    >
      {library.framework.name}
    </a>
  </div>
  
  <div class="px-4 py-3">
    <p class="text-sm text-gray-600 mb-3 line-clamp-2">
      {library.description}
    </p>
    
    <div class="flex flex-wrap gap-1 mb-3">
      {library.tags && library.tags.slice(0, 3).map(tag => (
        <a 
          href={`/tags/${tag.tag_id.slug}`}
          class="tag inline-flex items-center px-2 py-0.5 rounded-md text-xs font-medium bg-gray-50 text-gray-600 hover:bg-gray-100 border border-gray-100"
        >
          {tag.tag_id.name}
        </a>
      ))}
      {library.tags && library.tags.length > 3 && (
        <span class="tag inline-flex items-center px-2 py-0.5 rounded-md text-xs font-medium bg-gray-50 text-gray-500">
          +{library.tags.length - 3}
        </span>
      )}
    </div>
    
    <div class="flex justify-between text-xs text-gray-500">
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
        </svg>
        {formatNumber(library.github_stars)}
      </div>
      <div>
        {library.pricing && (
          <span class="capitalize">{library.pricing}</span>
        )}
      </div>
      <div>
        {library.latest_version && (
          <span>v{library.latest_version}</span>
        )}
      </div>
    </div>
  </div>
</div>
