---
import Layout from '../../layouts/Layout.astro';
import { supabase } from '../../lib/supabase';
import SkeletonLoader from '../../components/SkeletonLoader.jsx';

export const prerender = false;

const { slug } = Astro.params;

// Get library details
const { data: library, error: libraryError } = await supabase
  .from('libraries')
  .select(`
    *,
    framework:framework_id(id, name, slug),
    tags:library_tags(tag_id(id, name, slug))
  `)
  .eq('slug', slug)
  .single();

const isLoading = !library && !libraryError;

// Handle 404
if (libraryError && libraryError.code === 'PGRST116') {
  return Astro.redirect('/404');
}

// Format date
const formatDate = (dateString) => {
  if (!dateString) return '';
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
};
---

<Layout title={library ? `${library.name} - UI Library Directory` : 'Loading...'}>
  <main class="mx-auto px-4 sm:px-6 lg:px-8 py-6 max-w-7xl">
    {isLoading ? (
      <SkeletonLoader type="detail" client:load />
    ) : (
      <>
        <div class="mb-6">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6">
            <div class="flex items-center gap-4">
              {library.icon_url && (
                <img 
                  src={library.icon_url} 
                  alt={`${library.name} logo`} 
                  class="w-12 h-12 object-contain"
                />
              )}
              <h1 class="text-3xl font-bold text-gray-900">
                {library.name}
              </h1>
            </div>
            
            <div class="flex flex-wrap gap-2">
              {library.website_url && (
                <a 
                  href={library.website_url} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                  </svg>
                  Website
                </a>
              )}
              
              {library.github_url && (
                <a 
                  href={library.github_url} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md border border-gray-300 bg-white hover:bg-gray-50"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  GitHub
                </a>
              )}
              
              {library.docs_url && (
                <a 
                  href={library.docs_url} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md border border-gray-300 bg-white hover:bg-gray-50"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  Docs
                </a>
              )}
              
              {library.npm_url && (
                <a 
                  href={library.npm_url} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md border border-gray-300 bg-white hover:bg-gray-50"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M0 0v24h24v-24h-24zm13 21h-2v-9h-3v9h-5v-18h18v18h-8z"/>
                  </svg>
                  NPM
                </a>
              )}
            </div>
          </div>
          
          <p class="text-lg text-gray-600 mb-4 max-w-3xl">
            {library.description}
          </p>
          
          <div class="flex flex-wrap gap-2 mb-5">
            {library.tags && library.tags.map(tag => (
              <a 
                href={`/tags/${tag.tag_id.slug}`}
                class="tag inline-flex items-center px-3 py-1 rounded-md text-sm bg-gray-50 text-gray-700 hover:bg-gray-100 border border-gray-100"
              >
                {tag.tag_id.name}
              </a>
            ))}
          </div>
          
          <div class="flex flex-wrap items-center gap-x-6 gap-y-2 text-sm mb-6">
            {library.framework && (
              <a 
                href={`/frameworks/${library.framework.slug}`}
                class="inline-flex items-center text-indigo-600 hover:text-indigo-800"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                </svg>
                {library.framework.name} Framework
              </a>
            )}
            
            {library.github_stars && (
              <div class="inline-flex items-center text-gray-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 24 24" stroke="none">
                  <path d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>
                </svg>
                {library.github_stars.toLocaleString()} stars
              </div>
            )}
            
            {library.latest_version && (
              <div class="inline-flex items-center text-gray-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                </svg>
                v{library.latest_version}
              </div>
            )}
            
            {library.license && (
              <div class="inline-flex items-center text-gray-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                </svg>
                {library.license}
              </div>
            )}
            
            {library.pricing && (
              <div class="inline-flex items-center text-gray-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="capitalize">{library.pricing}</span>
              </div>
            )}
            
            {library.last_update && (
              <div class="inline-flex items-center text-gray-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Updated {formatDate(library.last_update)}
              </div>
            )}
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
            {/* Library Details */}
            <div class="bg-white p-5 rounded-lg border border-gray-200 shadow-sm">
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Library Details</h3>
              <div class="space-y-3">
                {library.total_components !== undefined && (
                  <div class="flex justify-between">
                    <span class="text-gray-600">Components</span>
                    <span<boltAction type="file" filePath="src/pages/libraries/[slug].astro">                    <span class="font-medium">{library.total_components}</span>
                  </div>
                )}
                {library.bundle_size && (
                  <div class="flex justify-between">
                    <span class="text-gray-600">Bundle Size</span>
                    <span class="font-medium">{library.bundle_size}</span>
                  </div>
                )}
                {library.styling && (
                  <div class="flex justify-between">
                    <span class="text-gray-600">Styling</span>
                    <span class="font-medium capitalize">{library.styling}</span>
                  </div>
                )}
                {library.customization && (
                  <div class="flex justify-between">
                    <span class="text-gray-600">Customization</span>
                    <span class="font-medium capitalize">{library.customization}</span>
                  </div>
                )}
                {library.typescript_support !== undefined && (
                  <div class="flex justify-between">
                    <span class="text-gray-600">TypeScript</span>
                    <span class="font-medium">{library.typescript_support ? 'Yes' : 'No'}</span>
                  </div>
                )}
                {library.dark_mode_support !== undefined && (
                  <div class="flex justify-between">
                    <span class="text-gray-600">Dark Mode</span>
                    <span class="font-medium">{library.dark_mode_support ? 'Yes' : 'No'}</span>
                  </div>
                )}
                {library.responsive !== undefined && (
                  <div class="flex justify-between">
                    <span class="text-gray-600">Responsive</span>
                    <span class="font-medium">{library.responsive ? 'Yes' : 'No'}</span>
                  </div>
                )}
              </div>
            </div>
            
            {/* GitHub Stats */}
            <div class="bg-white p-5 rounded-lg border border-gray-200 shadow-sm">
              <h3 class="text-lg font-semibold text-gray-900 mb-3">GitHub Stats</h3>
              <div class="space-y-3">
                <div class="flex justify-between">
                  <span class="text-gray-600">Stars</span>
                  <span class="font-medium">{library.github_stars?.toLocaleString() || 'N/A'}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Forks</span>
                  <span class="font-medium">{library.github_forks?.toLocaleString() || 'N/A'}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Open Issues</span>
                  <span class="font-medium">{library.github_open_issues?.toLocaleString() || 'N/A'}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Watchers</span>
                  <span class="font-medium">{library.github_watchers?.toLocaleString() || 'N/A'}</span>
                </div>
                {library.created_at && (
                  <div class="flex justify-between">
                    <span class="text-gray-600">Added</span>
                    <span class="font-medium">{formatDate(library.created_at)}</span>
                  </div>
                )}
              </div>
            </div>
            
            {/* Installation */}
            <div class="bg-white p-5 rounded-lg border border-gray-200 shadow-sm">
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Installation</h3>
              {library.installation_command ? (
                <div class="bg-gray-50 p-3 rounded-md border border-gray-100">
                  <code class="text-sm font-mono text-gray-800 break-all">{library.installation_command}</code>
                </div>
              ) : (
                <p class="text-gray-500 italic">No installation command provided</p>
              )}
              
              {library.npm_downloads !== undefined && (
                <div class="mt-4 flex justify-between">
                  <span class="text-gray-600">NPM Downloads</span>
                  <span class="font-medium">{library.npm_downloads?.toLocaleString() || 'N/A'}</span>
                </div>
              )}
            </div>
          </div>
          
          {/* Features */}
          {library.features && library.features.length > 0 && (
            <div class="mb-8 bg-white p-5 rounded-lg border border-gray-200 shadow-sm">
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Features</h3>
              <ul class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-2">
                {library.features.map(feature => (
                  <li class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500 mr-2 flex-shrink-0 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-gray-700">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
          
          {/* Gallery */}
          {library.gallery_images && library.gallery_images.length > 0 && (
            <div class="mb-8">
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Gallery</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {library.gallery_images.map(image => (
                  <div class="border border-gray-200 rounded-lg overflow-hidden shadow-sm">
                    <img 
                      src={image.url} 
                      alt={image.alt || `${library.name} screenshot`} 
                      class="w-full h-auto object-cover"
                      loading="lazy"
                    />
                  </div>
                ))}
              </div>
            </div>
          )}
          
          {/* Related Libraries */}
          <div class="mt-10">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">You might also like</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              {Array(3).fill(0).map((_, i) => (
                <div class="bg-white border border-gray-200 rounded-md overflow-hidden hover:border-indigo-200 hover:shadow-sm transition-all">
                  <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                      <div class="w-6 h-6 bg-gray-100 rounded-full"></div>
                      <span class="text-base font-medium text-gray-900">Similar Library {i+1}</span>
                    </div>
                  </div>
                  <div class="px-4 py-3">
                    <p class="text-sm text-gray-600 mb-3 line-clamp-2">
                      Another UI library with similar features and functionality.
                    </p>
                    <div class="flex justify-between text-xs text-gray-500">
                      <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                        </svg>
                        {(Math.random() * 10000).toFixed(0)}
                      </div>
                      <div>
                        <span>Free</span>
                      </div>
                      <div>
                        <span>v1.0.0</span>
                      </div>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </>
    )}
  </main>
</Layout>
