                {library.last_update && (
                  <li class="flex justify-between text-sm">
                    <span class="text-gray-600">Last Updated</span>
                    <span class="font-medium">{formatDate(library.last_update)}</span>
                  </li>
                )}
                {library.created_at && (
                  <li class="flex justify-between text-sm">
                    <span class="text-gray-600">Added</span>
                    <span class="font-medium">{formatDate(library.created_at)}</span>
                  </li>
                )}
              </ul>
            </div>
          </div>
          
