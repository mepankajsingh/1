              <h3 class="text-sm font-medium text-gray-500 mb-2">Package Info</h3>
              <ul class="space-y-2">
                {library.npm_downloads !== undefined && (
                  <li class="flex justify-between text-sm">
                    <span class="text-gray-600">NPM Downloads</span>
                    <span class="font-medium">{library.npm_downloads?.toLocaleString() || 'N/A'}</span>
                  </li>
                )}
                {library.installation_command && (
                  <li class="flex flex-col text-sm">
                    <span class="text-gray-600 mb-1">Installation</span>
