            <div class="mb-8">
              <h2 class="text-xl font-bold text-gray-900 mb-4">Features</h2>
              <ul class="list-disc pl-5 space-y-2">
                {library.features.map(feature => (
                  <li class="text-gray-600">{feature}</li>
                ))}
              </ul>
            </div>
          )}
          
          {library.gallery_images && library.gallery_images.length > 0 && (
            <div class="mb-8">
              <h2 class="text-xl font-bold text-gray-900 mb-4">Gallery</h2>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {library.gallery_images.map(image => (
                  <div class="border border-gray-200 rounded-md overflow-hidden">
                    <img 
                      src={image.url} 
                      alt={image.alt || `${library.name} screenshot`} 
                      class="w-full h-auto object-cover"
                    />
                  </div>
                ))}
              </div>
            </div>
