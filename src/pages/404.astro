---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - UI Library Directory">
  <main class="mx-auto px-4 sm:px-6 lg:px-8 py-16 max-w-3xl text-center">
    <h1 class="text-5xl font-bold mb-6 text-primary">
      404 - Page Not Found
    </h1>
    
    <p class="text-xl text-secondary-text mb-8">
      The page you're looking for doesn't exist or has been moved.
    </p>
    
    <a href="/" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
      Return to Home
    </a>
  </main>
</Layout>
