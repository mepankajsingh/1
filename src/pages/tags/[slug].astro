---
import Layout from '../../layouts/Layout.astro';
import LibraryCard from '../../components/LibraryCard.astro';
import { supabase } from '../../lib/supabase';

export const prerender = false;

const { slug } = Astro.params;

// Get tag info
const { data: tag } = await supabase
  .from('tags')
  .select('*')
  .eq('slug', slug)
  .single();

if (!tag) {
  return Astro.redirect('/404');
}

// Get libraries with this tag
const { data: taggedLibraries } = await supabase
  .from('library_tags')
  .select(`
    library_id(
      *,
      framework:framework_id(id, name, slug),
      tags:library_tags(tag_id(id, name, slug))
    )
  `)
  .eq('tag_id', tag.id);

const libraries = taggedLibraries ? taggedLibraries.map(item => item.library_id) : [];
---

<Layout title={`${tag.name} UI Libraries - UI Library Directory`} description={`Browse UI component libraries tagged with ${tag.name}`}>
  <main class="mx-auto px-4 sm:px-6 lg:px-8 py-8 max-w-7xl">
    <div class="mb-8">
      <h1 class="text-3xl font-bold leading-tight mb-2 text-primary">
        {tag.name} UI Libraries
      </h1>
      <p class="text-lg text-secondary-text">
        Browse UI component libraries tagged with {tag.name}
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {libraries && libraries.map(library => (
        <LibraryCard library={library} />
      ))}
      
      {libraries && libraries.length === 0 && (
        <p class="col-span-3 text-center py-8 text-gray-500">
          No libraries found with this tag yet.
        </p>
      )}
    </div>
  </main>
</Layout>
