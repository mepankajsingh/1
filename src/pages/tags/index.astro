---
import Layout from '../../layouts/Layout.astro';
import TagCard from '../../components/TagCard.astro';
import { supabase } from '../../lib/supabase';

export const prerender = false;

// Get all tags
const { data: tags, error } = await supabase
  .from('tags')
  .select('*, library_count:libraries_aggregate(count)')
  .order('name');

// Process tags to include count
const processedTags = tags?.map(tag => ({
  ...tag,
  count: tag.library_count?.count || 0
})) || [];
---

<Layout title="Browse by Tags - UI Library Directory">
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Browse by Tags</h1>
      <p class="text-lg text-gray-600">
        Find UI libraries by features, capabilities, and categories
      </p>
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
      {processedTags.map(tag => (
        <TagCard tag={tag} />
      ))}
      
      {!tags && error && (
        <div class="col-span-4 py-12 text-center">
          <h3 class="text-lg font-medium text-gray-900 mb-1">Error loading tags</h3>
          <p class="text-gray-500">
            Please try refreshing the page.
          </p>
        </div>
      )}
      
      {processedTags.length === 0 && !error && (
        <div class="col-span-4 py-12 text-center">
          <h3 class="text-lg font-medium text-gray-900 mb-1">No tags found</h3>
          <p class="text-gray-500">
            Check back later for more content.
          </p>
        </div>
      )}
    </div>
  </main>
</Layout>
