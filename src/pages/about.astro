---
import Layout from '../layouts/Layout.astro';
import { getPageData } from '../lib/supabase';

export const prerender = false;

const pageData = await getPageData('about');
---

<Layout title={pageData.title}>
  <main class="mx-auto p-6 max-w-3xl">
    <h1 class="text-5xl font-bold leading-tight text-center mb-8 bg-clip-text text-transparent bg-gradient-to-r from-[rgb(136,58,234)] via-[rgb(224,204,250)] to-white bg-[length:400%] bg-[0%]">
      {pageData.title}
    </h1>
    <div class="mb-8 border border-[rgba(224,204,250,0.25)] bg-gradient-to-b from-[rgba(49,10,101,0.66)] to-[rgba(49,10,101,0.33)] p-6 rounded-lg text-xl leading-relaxed">
      {pageData.content}
    </div>
  </main>
</Layout>
