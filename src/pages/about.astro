---
import Layout from '../layouts/Layout.astro';
import { getPageData } from '../lib/supabase';

export const prerender = false;

const pageData = await getPageData('about');
---

<Layout title={pageData.title}>
  <main class="mx-auto p-6 max-w-3xl">
    <h1 class="text-5xl font-bold leading-tight text-center mb-8 text-primary">
      {pageData.title}
    </h1>
    <div class="mb-8 border border-gray-100 bg-white p-6 rounded-lg shadow-sm text-lg leading-relaxed text-secondary-text">
      {pageData.content}
    </div>
  </main>
</Layout>
