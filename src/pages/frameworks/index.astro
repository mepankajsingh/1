---
import Layout from '../../layouts/Layout.astro';
import FrameworkCard from '../../components/FrameworkCard.astro';
import { supabase } from '../../lib/supabase';

export const prerender = false;

// Get all frameworks
const { data: frameworks, error } = await supabase
  .from('frameworks')
  .select('*')
  .order('name');
---

<Layout title="UI Frameworks - UI Library Directory">
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">UI Frameworks</h1>
      <p class="text-lg text-gray-600">
        Browse popular JavaScript UI frameworks for your next project
      </p>
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
      {frameworks && frameworks.map(framework => (
        <FrameworkCard framework={framework} />
      ))}
      
      {!frameworks && error && (
        <div class="col-span-6 py-12 text-center">
          <h3 class="text-lg font-medium text-gray-900 mb-1">Error loading frameworks</h3>
          <p class="text-gray-500">
            Please try refreshing the page.
          </p>
        </div>
      )}
    </div>
  </main>
</Layout>
