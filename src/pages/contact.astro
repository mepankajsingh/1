---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm';

export const prerender = false;
---

<Layout title="Contact Us - UI Library Directory">
  <main class="mx-auto p-6 max-w-3xl">
    <h1 class="text-5xl font-bold leading-tight text-center mb-8 text-primary">
      Contact Us
    </h1>
    <div class="mb-8 border border-gray-100 bg-white p-6 rounded-lg shadow-sm">
      <p class="mb-6 text-lg text-secondary-text">
        Have questions, suggestions, or want to contribute to our UI library directory? 
        We'd love to hear from you! Fill out the form below and we'll get back to you as soon as possible.
      </p>
      <ContactForm client:load />
    </div>
  </main>
</Layout>
