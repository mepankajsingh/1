---
import Layout from '../layouts/Layout.astro';
import SearchBar from '../components/SearchBar';
import LibraryCard from '../components/LibraryCard.astro';
import { searchLibraries } from '../lib/supabase';

export const prerender = false;

const query = Astro.url.searchParams.get('q') || '';
const libraries = query ? await searchLibraries(query) : [];
---

<Layout title="Search UI Libraries - UI Library Directory" description="Search for UI component libraries across different JavaScript frameworks">
  <main class="mx-auto px-4 sm:px-6 lg:px-8 py-8 max-w-7xl">
    <div class="mb-8">
      <h1 class="text-3xl font-bold leading-tight mb-4 text-primary">
        Search UI Libraries
      </h1>
      
      <div class="mb-6">
        <SearchBar initialQuery={query} client:load />
      </div>
      
      {query && (
        <p class="text-lg text-secondary-text mb-4">
          {libraries.length} results for "{query}"
        </p>
      )}
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {libraries && libraries.map(library => (
        <LibraryCard library={library} />
      ))}
      
      {query && libraries.length === 0 && (
        <p class="col-span-3 text-center py-8 text-gray-500">
          No libraries found matching your search.
        </p>
      )}
      
      {!query && (
        <p class="col-span-3 text-center py-8 text-gray-500">
          Enter a search term to find UI libraries.
        </p>
      )}
    </div>
  </main>
</Layout>
